<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "professors/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label '名前/name' %><br />
    <%= f.text_field :name_p, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label 'カタカナ/name' %><br />
    <%= f.text_field :name_k_p, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label '大学名/university' %><br />
    <%= f.text_field :university_p, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '学部/undergraduate' %><br />
    <%= f.text_field :undergraduate_p, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '学科/department' %><br />
    <%= f.text_field :department_p, autofocus: true %>
  </div>

  <div class="field">
  <span class="image-file">プロフィール画像</span>
  <%= f.file_field :image, class: 'hidden' %>
  </div>

  <div class="field">
    <%= f.label '自己紹介/professors_detail' %><br />
    <%= f.text_field :professors_detail, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label '資格/qualification' %><br />
    <%= f.text_field :qualification, autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "professors/shared/links" %>
